<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.DetailsTipsActivity">

        <ImageView
            android:id="@+id/item_image_detailsTipsItem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/unplag"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/black"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_detailsTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTitle_detailsTipsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:paddingTop="@dimen/_16sdp"
                android:text="TITLU"
                android:textStyle="bold"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/descriere_detailsTipsItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:text="DESCRIERE"
                />
            <TextView
                android:id="@+id/descriere_detailsTipsItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:text="DESCRIERE"
                android:textColor="@color/colorAccent"
                />
            <TextView
                android:id="@+id/descriere_detailsTipsItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:text="DESCRIERE"
                android:visibility="gone"
                />
            <com.example.energyapp.classes.NonScrollListView
                android:id="@+id/listView_dispozitiveVechi_detailsTipsItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/recomandari_detailsTipsItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:paddingRight="@dimen/_16sdp"
                android:paddingLeft="@dimen/_16sdp"
                android:text="RECOMANDARI"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                />
            <com.example.energyapp.classes.NonScrollListView
                android:id="@+id/listView_recomandari_detailsTipsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

               />



        </LinearLayout>
        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView_sfaturiGenerale"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_400sdp"/>
        <Button
            android:id="@+id/btn_spreSimulator_detailsTipsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="Simuleaza schimbarea"
            android:background="@drawable/shape_buttonlogin"

            />


        <Button
            android:id="@+id/btn_close_detailsTips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="ÃŽnchide"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"

            />


    </LinearLayout>

</ScrollView>